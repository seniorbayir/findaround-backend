!!! 5
%html{lang: "en"}
  %head
    %title
      = yield(:title).presence or 'Real World Search Engine, literally...'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Ubuntu:300|PT+Sans:400,700'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true, debug: false
    = javascript_include_tag 'application', 'data-turbolinks-track' => true, debug: false
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
    = csrf_meta_tags
  %body
    %span#left-panel-icon
    = render 'layouts/left_panel'
    = render 'layouts/navbar'
    #content
      = yield
    = render 'layouts/footer'